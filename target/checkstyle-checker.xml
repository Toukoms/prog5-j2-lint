<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
  <module name="TreeWalker">

    <!-- Classes : PascalCase -->
    <module name="TypeName">
      <property name="format" value="^[A-Z][a-zA-Z0-9]*$" />
      <property name="message" value="Les classes doivent être en PascalCase" />
    </module>

    <!-- Méthodes : camelCase -->
    <module name="MethodName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$" />
      <property name="message" value="Les méthodes doivent être en camelCase" />
    </module>

    <!-- Variables : camelCase -->
    <module name="MemberName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$" />
      <property name="message" value="Les variables doivent être en camelCase" />
    </module>

    <!-- Paramètres : camelCase -->
    <module name="ParameterName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$" />
      <property name="message" value="Les paramètres doivent être en camelCase" />
    </module>

    <!-- Variables locales : camelCase -->
    <module name="LocalVariableName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$" />
      <property name="message" value="Les variables locales doivent être en camelCase" />
    </module>

  </module>
</module>